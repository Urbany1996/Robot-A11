void setup() {
  Serial.begin(9600);
  myservo1.attach(5);
  myservo2.attach(6);
  myservo3.attach(7);
  pinMode(LED_BUILTIN, OUTPUT); //13
funcionesB();
delay(1000);
  }

void loop() {
  if(Serial.available()>0)
  { 
    recibir=Serial.read();
    Serial.println(recibir);
  }
  switch (recibir){
  case 'a':{sensor1();break;}
  case 'b':{bocina1();break;}
  case 'c':{brazoD();break;}// izquierdo
  case 'd':{brazoI();break;}// derecho
  case 'e':{cabezaC();break;}
  case 'f':{corazon1();break;}
  case 'g':{analizar1();break;}
  case 'h':{mario();break;}
  default:{break;}
  }

}

void sensor1(){
  distance = ultrasonic.read();  
  Serial.print("Distance in CM: ");
  Serial.println(distance);
  delay(1000); 
}
 
void bocina1(){
    tone(pinzumbador,frecuencia);    
    delay(2000);                    
    noTone(pinzumbador);              
    delay(1000);
}
void brazoD(){ // izquierdo
  for (pos = 60; pos <= 140; pos += 1) { 
    myservo1.write(pos);
    delay(15);                       
  }
    for (pos = 140; pos >= 60; pos -= 1) { 
    myservo1.write(pos);            
    delay(15);                      
  }
}

void brazoI(){ //derecho 
  for (pos = 60; pos <= 140; pos += 1) { 
    myservo3.write(pos);
    delay(15);                       
  }
    for (pos = 140; pos >= 60; pos -= 1) { 
    myservo3.write(pos);            
    delay(15);                      
  }
}
void cabezaC(){
  for (pos = 60; pos <= 140; pos += 1) { 
    myservo2.write(pos);
    delay(15);                       
  }
    for (pos = 140; pos >= 60; pos -= 1) { 
    myservo2.write(pos);            
    delay(15);                      
  }
}

  void corazon1(){
  digitalWrite(LED_BUILTIN, HIGH);  
  delay(1000); 
  digitalWrite(LED_BUILTIN, LOW);   
  delay(1000);
  }

  void analizar1(){
   myservo2.write(90);
    delay(1500);    
  distance = ultrasonic.read();  
  Serial.print("Distance in CM: ");
  Serial.println(distance);
  delay(1000); 
  if (distance<50){
  Serial.print("Distance in CM: ");
  Serial.println(distance);
  delay(1000);
  digitalWrite(LED_BUILTIN, HIGH);  
  delay(1000); 
  Serial.print("alerta estas muy cerca");
  tone(pinzumbador,frecuencia);    
  delay(2000);                    
  noTone(pinzumbador);              
  delay(1000);
  }  
    if (distance>=50){
  Serial.print("Distance in CM: ");
  Serial.println(distance);
  delay(1000);
  digitalWrite(LED_BUILTIN, LOW);  
  delay(1000); 
  Serial.print("te alejas de mi");
  brazoD();
  }  
    
  }

  void mario(){
        for (int nota = 0; nota < 156; nota++) {
